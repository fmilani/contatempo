{
  "name": "contatempo",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "dev": "TZ=Europe/London meteor --settings settings.json",
    "lint": "eslint . --ext .js,.jsx",
    "test": "spacejam test --driver-package practicalmeteor:mocha-console-runner --coverage out_lcovonly",
    "tdd": "meteor test --driver-package practicalmeteor:mocha --settings settings.coverage.json"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/extensions": [
        "off",
        "never"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "material-ui": "^0.18.0",
    "meteor-node-stubs": "~0.2.5",
    "moment": "^2.17.1",
    "moment-duration-format": "^1.3.0",
    "moment-timezone": "^0.5.11",
    "react": "^15.4.2",
    "react-addons-pure-render-mixin": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-headroom": "^2.1.5",
    "react-konami": "^0.4.0",
    "react-router": "^3.0.2",
    "react-tap-event-plugin": "^2.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "chai-datetime": "^1.4.1",
    "coveralls": "^2.11.16",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.10.0"
  }
}
